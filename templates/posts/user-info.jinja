<div class="flex space-x-2 items-center justify-center">
	{% include 'posts/profile-picture.jinja' %}
	<p class="text-sm font-bold" title="@{{ (post|translate_repost).user.username }}">
		{{ (post|translate_repost).user.first_name }} {{ (post|translate_repost).user.last_name }}
		<span class="font-light">
		<a href="{{ url("user", post.user.username) }}">@{{ post.user.username }}</a>
		</span>
	</p>
	{% if post.visibility != 'public' %}
		<div class="ml-2">
		{% if post.visibility == 'members' %}
			<span class="badge badge-primary">Members View Only</span>
		{% elif post.visibility == 'moderators' %}
			<span class="badge badge-secondary">Moderators View Only</span>
		{% endif %}
		</div>
	{% endif %}
</div>
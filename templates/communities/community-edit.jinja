{% extends 'base/index.jinja' %}
{% block title %}Edit Community{% endblock %}
{% block content %}
<div class="max-w-6xl mx-auto">
	<h2 class="text-2xl font-bold mb-6">Edit Community <span class="font-light">{{ community.name }}</span></h2>
	<form method="post" enctype="multipart/form-data" class="space-y-4">
		{% csrf_token %}
		<div class="space-y-4">
			<div class="form-control">
				<label class="label" for="{{ form.name.id_for_label }}">
				<span class="label-text">{{ form.name.label}}</span>
				</label>
				{{ form.name }}
				{% if form.name.errors %}
                    <label class="label">
                        {% for error in form.name.errors %}
                            <span class="label-text-alt text-error">{{ error }}</span>
                        {% endfor %}
                    </label>
                {% endif %}
			</div>
			<div class="form-control">
				<label class="label" for="{{ form.description.id_for_label }}">
				<span class="label-text">{{ form.description.label }}</span>
				</label>
				{{ form.description }}
				{% if form.description.errors %}
                    <label class="label">
                        {% for error in form.description.errors %}
                            <span class="label-text-alt text-error">{{ error }}</span>
                        {% endfor %}
                    </label>
                {% endif %}
			</div>
			<div class="form-control">
				<label class="label" for="{{ form.banner_url.id_for_label }}">
				<span class="label-text">Banner</span>
				</label>
				{{ form.banner_url }}
				{% if form.banner_url.errors %}
                    <label class="label">
                        {% for error in form.banner_url.errors %}
                            <span class="label-text-alt text-error">{{ error }}</span>
                        {% endfor %}
                    </label>
                {% endif %}
			</div>
			<div class="form-control">
				<label class="label" for="{{ form.icon_url.id_for_label }}">
				<span class="label-text">Icon</span>
				</label>
				{{ form.icon_url }}
				{% if form.icon_url.errors %}
                    <label class="label">
                        {% for error in form.icon_url.errors %}
                            <span class="label-text-alt text-error">{{ error }}</span>
                        {% endfor %}
                    </label>
                {% endif %}
			</div>
			<div class="form-control">
				<label class="label" for="{{ form.category.id_for_label }}">
				<span class="label-text">{{ form.category.label }}</span>
				</label>
				{{ form.category }}
				{% if form.category.errors %}
					<label class="label">
						{% for error in form.category.errors %}
							<span class="label-text-alt text-error">{{ error }}</span>
						{% endfor %}
					</label>
				{% endif %}
			</div>
		</div>
		<button type="submit" class="btn btn-primary w-full mt-6">Save Changes</button>
	</form>
</div>
{% endblock %}
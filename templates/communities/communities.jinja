{% extends 'base/index.jinja' %}
{% block title %}{{ community.name }}{% endblock %}
{% block content %}
<div class="max-w-6xl mx-auto">
	<!-- Community Header -->
	<div class="bg-base-100 p-6 rounded-box shadow-lg mb-4">
		<div class="flex items-center gap-4">
			<div class="avatar placeholder">
				<div class="w-16 rounded-full bg-neutral-focus text-neutral-content">
					<span>{{ community.name|make_list|first|upper }}</span>
				</div>
			</div>
			<div>
				<h1 class="text-2xl font-bold">{{ community.name }}</h1>
				<p class="text-base-content/60">{{ community.members_count }} members</p>
			</div>
			<button class="btn btn-primary ml-auto">Join Community</button>
		</div>
		<p class="mt-4">{{ community.description }}</p>
	</div>
	<!-- Main Content Area -->
	<div class="flex gap-4">
		<!-- Posts Column -->
		<div class="w-3/4">
			<!-- Create Post -->
			<div class="card bg-base-100 shadow-lg mb-4">
				<div class="card-body">
					<textarea class="textarea textarea-bordered w-full" placeholder="Create a post"></textarea>
					<div class="card-actions justify-end mt-2">
						<button class="btn btn-primary">Post</button>
					</div>
				</div>
			</div>
			<!-- Pinned Posts -->
			<div class="mb-4">
				<h2 class="text-lg font-bold mb-2">ðŸ“Œ Pinned Posts</h2>
				<div class="card bg-base-100 shadow-lg border-l-4 border-primary">
					<div class="card-body">
						<div class="flex items-center gap-2">
							<div class="badge badge-primary">Admin</div>
							<h3 class="font-bold">Important Announcement</h3>
						</div>
						<p>This is a pinned post from the community admin.</p>
						<div class="card-actions justify-end">
							<button class="btn btn-ghost btn-sm">Comment</button>
							<button class="btn btn-ghost btn-sm">Share</button>
						</div>
					</div>
				</div>
			</div>
			<!-- Regular Posts -->
			<div class="space-y-4">
				<h2 class="text-lg font-bold">Recent Posts</h2>
				<div class="card bg-base-100 shadow-lg">
					<div class="card-body">
						<div class="flex items-center gap-2 mb-2">
							<div class="avatar placeholder">
								<div class="w-8 rounded-full bg-neutral-focus text-neutral-content">
									<span>U</span>
								</div>
							</div>
							<span class="font-bold">Username</span>
							<span class="text-base-content/60 text-sm">2 hours ago</span>
						</div>
						<h3 class="font-bold">Post Title</h3>
						<p>Post content goes here...</p>
						<div class="card-actions justify-end">
							<button class="btn btn-ghost btn-sm">Comment</button>
							<button class="btn btn-ghost btn-sm">Share</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Sidebar -->
		<div class="w-1/4">
			<div class="bg-base-100 p-4 rounded-box shadow-lg">
				<h3 class="font-bold mb-2">About Community</h3>
				<div class="divider my-2"></div>
				<div class="space-y-2">
					<div>
						<h4 class="font-semibold">Created</h4>
						<p class="text-sm">March 15, 2024</p>
					</div>
					<div>
						<h4 class="font-semibold">Community Rules</h4>
						<ul class="text-sm list-disc list-inside">
							<li>Be respectful to others</li>
							<li>No spam or self-promotion</li>
							<li>Follow university guidelines</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
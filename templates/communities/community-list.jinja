{% extends 'base/index.jinja' %}

{% block title %}Communities{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold">Communities</h1>
        <a href="{{ url('community_create') }}" class="btn btn-primary">Create Community</a>
    </div>

    {% if user_communities %}
    <div class="mb-8">
        <h2 class="text-xl font-bold mb-4">Your Created Communities</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for community in user_communities %}
                {% include 'communities/community-card.jinja' %}
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <div>
        <h2 class="text-xl font-bold mb-4">All Communities</h2>
        {% include 'search/search.jinja' %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for community in all_communities %}
                {% include 'communities/community-card.jinja' %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

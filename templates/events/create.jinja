{% extends 'base/index.jinja' %}

{% block title %}Create Event{% endblock %}

{% block content %}
<div class="max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-6">Create Event for {{ community.name }}</h2>
    <form method="post">
      {% csrf_token %}
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="form-control">
            <label class="label" for="{{ form.title.id_for_label }}">
              <span class="label-text">Title</span>
            </label>
            {{ form.title }}
            {% if form.title.errors %}
            <div class="text-error mt-1">
              {{ form.title.errors.0 }}
            </div>
            {% endif %}
          </div>

          <div class="form-control">
            <label class="label" for="{{ form.details.id_for_label }}">
              <span class="label-text">Details</span>
            </label>
            {{ form.details }}
            {% if form.details.errors %}
            <div class="text-error mt-1">
              {{ form.details.errors.0 }}
            </div>
            {% endif %}
          </div>

          <div class="form-control">
            <label class="label" for="{{ form.location.id_for_label }}">
              <span class="label-text">Location</span>
            </label>
            {{ form.location }}
            {% if form.location.errors %}
            <div class="text-error mt-1">
              {{ form.location.errors.0 }}
            </div>
            {% endif %}
          </div>

          <div class="form-control">
            <label class="label" for="{{ form.start_at.id_for_label }}">
              <span class="label-text">Start Time</span>
            </label>
            {{ form.start_at }}
            {% if form.start_at.errors %}
            <div class="text-error mt-1">
              {{ form.start_at.errors.0 }}
            </div>
            {% endif %}
          </div>

          <div class="form-control">
            <label class="label" for="{{ form.end_at.id_for_label }}">
              <span class="label-text">End Time</span>
            </label>
            {{ form.end_at }}
            {% if form.end_at.errors %}
            <div class="text-error mt-1">
              {{ form.end_at.errors.0 }}
            </div>
            {% endif %}
          </div>
          
          <div class="form-control mt-4">
            <label class="label cursor-pointer">
              <span class="label-text">Members-only event</span>
              <input type="checkbox" name="members_only" class="checkbox" />
            </label>
            <p class="text-xs text-base-content/60">
              If checked, only community members will be able to view event details
            </p>
          </div>
          
          <div class="card-actions justify-end mt-2">
            <button type="submit" class="btn btn-primary">Create Event</button>
          </div>
        </div>
      </div>
    </form>
</div>
{% endblock %} 
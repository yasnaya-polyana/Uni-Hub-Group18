<div class="recommendation-component bg-base-200 p-4 rounded-lg shadow-sm mb-6">
	<h3 class="text-lg font-semibold mb-3">Recommended for You</h3>
	{% if recommended_communities %}
	<div class="mb-4">
		<h4 class="text-md font-medium mb-2">Communities You Might Like</h4>
		<div class="grid grid-cols-1 gap-3">
			{% for community in recommended_communities %}
			<div class="card bg-base-100 shadow-sm">
				<div class="card-body p-3">
					<h5 class="card-title text-sm">{{ community.name }}</h5>
					<p class="text-xs text-gray-500">{{ community.members.count() }} members</p>
					<div class="card-actions justify-end mt-2">
						{% if community.id %}
						<a href="{{ url('community_detail', community_id=community.id) }}" class="btn btn-xs btn-primary">View</a>
						{% else %}
						<button class="btn btn-xs btn-disabled">View</button>
						{% endif %}
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	{% endif %}
	{% if recommended_events %}
	<div>
		<h4 class="text-md font-medium mb-2">Events You Might Be Interested In</h4>
		<div class="grid grid-cols-1 gap-3">
			{% for event in recommended_events %}
			<div class="card bg-base-100 shadow-sm">
				<div class="card-body p-3">
					<h5 class="card-title text-sm">{{ event.title }}</h5>
					<p class="text-xs text-gray-500">{{ event.start_time|date('M d, Y') }}</p>
					<div class="card-actions justify-end mt-2">
						{% if event.id %}
						<a href="{{ url('event_detail', event_id=event.id) }}" class="btn btn-xs btn-primary">View</a>
						{% else %}
						<button class="btn btn-xs btn-disabled">View</button>
						{% endif %}
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	{% endif %}
	{% if not recommended_communities and not recommended_events %}
	<p class="text-sm text-gray-500">Join more communities to get personalized recommendations!</p>
	{% endif %}
</div>
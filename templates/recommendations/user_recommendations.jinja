{% extends "base.jinja" %}
{% block content %}
<div class="container mx-auto px-4 py-8">
	<h1 class="text-2xl font-bold mb-6">Recommended for You</h1>
	<div class="mb-8">
		<h2 class="text-xl font-semibold mb-4">Communities You Might Like</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
			{% for recommendation in community_recommendations %}
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h3 class="card-title">{{ recommendation.community.name }}</h3>
					<p>{{ recommendation.community.description|truncate(100) }}</p>
					<div class="card-actions justify-end mt-4">
						<a href="{{ url('community_detail', community_id=recommendation.community.id) }}" class="btn btn-primary btn-sm">View Community</a>
					</div>
				</div>
			</div>
			{% else %}
			<p>No community recommendations available yet.</p>
			{% endfor %}
		</div>
	</div>
	<div>
		<h2 class="text-xl font-semibold mb-4">Events You Might Be Interested In</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
			{% for recommendation in event_recommendations %}
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h3 class="card-title">{{ recommendation.event.title }}</h3>
					<p>{{ recommendation.event.description|truncate(100) }}</p>
					<p class="text-sm text-gray-500">{{ recommendation.event.start_time|date('F j, Y, g:i a') }}</p>
					<div class="card-actions justify-end mt-4">
						<a href="{{ url('event_detail', event_id=recommendation.event.id) }}" class="btn btn-primary btn-sm">View Event</a>
					</div>
				</div>
			</div>
			{% else %}
			<p>No event recommendations available yet.</p>
			{% endfor %}
		</div>
	</div>
</div>
{% endblock %}
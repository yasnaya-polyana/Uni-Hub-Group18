{% extends 'base/index.jinja' %}
{% block title %}Reset Password{% endblock %}
{% block content %}
<div class="max-w-md mx-auto">
	<h2 class="text-2xl font-bold mb-6">Reset Password</h2>
	<p class="mb-4">Enter your email address and we'll send you instructions to reset your password.</p>
	<form method="post" class="space-y-4">
		{% csrf_token %}
		<div class="form-control">
			<label class="label" for="id_email">
			<span class="label-text">Email</span>
			</label>
			<input type="email" name="email" class="input input-bordered w-full" required id="id_email">
			{% if form.email.errors %}
			<label class="label">
			<span class="label-text-alt text-error">{{ form.email.errors|join(", ") }}</span>
			</label>
			{% endif %}
		</div>
		<button type="submit" class="btn btn-primary w-full">Send Reset Link</button>
	</form>
	<p class="mt-4 text-center">
		<a href="{{ url('login') }}" class="text-primary">Back to Login</a>
	</p>
</div>
{% endblock %}
{% extends 'base/index.jinja' %}

{% block title %}User Settings{% endblock %}

{% block content %}
<div class="max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-6">User Settings</h2>
    <form method="post" class="space-y-4">
        <h2>Notification Preferences</h2>
        {% csrf_token %}
        <div class="form-group">
            {{ form.like_notifications.label }}
            {{ form.like_notifications }}
        </div>
        <div class="form-group">
            {{ form.comment_notifications.label }}
            {{ form.comment_notifications }}
        </div>
        <div class="form-group">
            {{ form.follow_notifications.label }}
            {{ form.follow_notifications }}
        </div>
        <button type="submit" class="btn btn-primary w-full">Save Settings</button>
    </form>
</div>
{% endblock %}
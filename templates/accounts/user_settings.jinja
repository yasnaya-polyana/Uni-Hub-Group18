{% extends 'base/index.jinja' %}
{% block title %}User Settings{% endblock %}
{% block content %}
<div class="max-w-2xl mx-auto my-8">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title text-2xl font-bold mb-6 pb-2 border-b">User Settings</h2>
            
            <form method="post" class="space-y-6">
                {% csrf_token %}
                
                <div class="mb-4">
                    <h3 class="text-lg font-semibold mb-4">Notification Preferences</h3>
                    <p class="text-sm opacity-70 mb-4">Choose which notifications you'd like to receive</p>
                    
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-3 bg-base-200 rounded-md hover:bg-base-300 transition">
                            <div>
                                <label for="{{ form.like_notifications.id_for_label }}" class="font-medium">
                                    {{ form.like_notifications.label }}
                                </label>
                                <p class="text-sm opacity-70">Receive notifications when someone likes your posts</p>
                            </div>
                            <div class="ml-4">
                                {{ form.like_notifications }}
                            </div>
                        </div>
                        
                        <div class="flex items-center justify-between p-3 bg-base-200 rounded-md hover:bg-base-300 transition">
                            <div>
                                <label for="{{ form.comment_notifications.id_for_label }}" class="font-medium">
                                    {{ form.comment_notifications.label }}
                                </label>
                                <p class="text-sm opacity-70">Receive notifications when someone comments on your posts</p>
                            </div>
                            <div class="ml-4">
                                {{ form.comment_notifications }}
                            </div>
                        </div>
                        
                        <div class="flex items-center justify-between p-3 bg-base-200 rounded-md hover:bg-base-300 transition">
                            <div>
                                <label for="{{ form.follow_notifications.id_for_label }}" class="font-medium">
                                    {{ form.follow_notifications.label }}
                                </label>
                                <p class="text-sm opacity-70">Receive notifications when someone follows you</p>
                            </div>
                            <div class="ml-4">
                                {{ form.follow_notifications }}
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="pt-4 border-t">
                    <button type="submit" class="btn btn-primary w-full">
                        Save Settings
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
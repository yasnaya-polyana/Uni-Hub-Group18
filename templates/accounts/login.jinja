{% extends 'base/index.jinja' %}
{% block title %}Login{% endblock %}
{% block content %}
  <div class="max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-6">Login</h2>
    <form method="post" class="space-y-4">
      {% csrf_token %}
      {% for field in form %}
        {# Render other fields below #}
        <div class="form-control mt-4">
          {# Add margin top for spacing #}
          <label class="label" for="{{ field.id_for_label }}">
            <span class="label-text">{{ field.label }}</span>
          </label>
          {{ field }}
          {% if field.errors %}
            <label class="label">
              <span class="label-text-alt text-error">{{ field.errors|join(", ") }}</span>
            </label>
          {% endif %}
        </div>
      {% endfor %}
      <button type="submit" class="btn btn-primary w-full">Login</button>
    </form>
    <p class="mt-4 text-center">
      Don't have an account? <a href="{{ url('signup') }}" class="text-primary">Sign up</a>
    </p>
    <p class="mt-2 text-center">
      Forgot your password? <a href="{{ url('password_reset') }}" class="text-primary">Reset it</a>
    </p>
  </div>
{% endblock %}

